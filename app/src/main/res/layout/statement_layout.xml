<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="260dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Date:"
        android:textSize="18sp"
        android:layout_margin="20dp"
        style="@style/Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TableRow  android:padding="5dp">
                <TextView
                    android:id="@+id/row1_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="Total Revenue" />
                <TextView
                    android:id="@+id/row1_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="61860" />
            </TableRow>
            <TableRow  android:padding="5dp">
                <TextView
                    android:id="@+id/row2_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="Gross Profit" />
                <TextView
                    android:id="@+id/row2_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="34300" />

            </TableRow>
            <TableRow  android:padding="5dp">
                <TextView
                    android:id="@+id/row3_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17dp"
                    android:text="Operating Income" />
                <TextView
                    android:id="@+id/row3_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="6979" />

            </TableRow>

            <TableRow  android:padding="5dp">
                <TextView
                    android:id="@+id/row4_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="Com.Income Net of Tax" />
                <TextView
                    android:id="@+id/row4_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17dp"
                    android:text="5481" />

            </TableRow>
            <TableRow  android:padding="5dp">
                <TextView
                    android:id="@+id/row5_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="Net Income" />
                <TextView
                    android:id="@+id/row5_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oxygen_mono"
                    android:textSize="17sp"
                    android:text="7502" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
